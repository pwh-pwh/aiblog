---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import { Mail, Github, Twitter, Linkedin } from 'lucide-react';
---

<Layout title="About | Antigravity">
	<Navbar client:load />
	
	<main class="pt-32 pb-24 px-4">
		<div class="max-w-4xl mx-auto">
            {/* Header Section */}
			<div class="flex flex-col md:flex-row items-start gap-12 mb-20">
                <div class="relative shrink-0">
                    <div class="w-32 h-32 md:w-48 md:h-48 rounded-full bg-gradient-to-br from-primary to-purple-600 p-1">
                        <div class="w-full h-full rounded-full bg-background overflow-hidden relative">
                             {/* Placeholder for user avatar */}
                            <div class="absolute inset-0 bg-zinc-800 flex items-center justify-center text-4xl">
                                üë®‚Äçüíª
                            </div>
                        </div>
                    </div>
                    <div class="absolute -bottom-2 -right-2 bg-card border border-white/10 px-4 py-1 rounded-full text-xs font-medium text-primary shadow-xl">
                        Open to work
                    </div>
                </div>
                
                <div>
                    <h1 class="font-heading text-4xl md:text-6xl font-bold mb-6">
                        Hi, I'm <span class="text-primary">Antigravity</span>.
                    </h1>
                    <p class="text-xl text-muted-foreground leading-relaxed mb-8">
                        I'm a full-stack developer and UI designer passionate about building digital experiences that feel alive. I specialize in the React ecosystem, modern CSS, and creative coding.
                    </p>
                    <div class="flex gap-4">
                        <a href="#" class="p-2 rounded-full bg-white/5 border border-white/10 text-muted-foreground hover:text-white hover:bg-white/10 transition-all">
                            <Github className="w-5 h-5" />
                        </a>
                        <a href="#" class="p-2 rounded-full bg-white/5 border border-white/10 text-muted-foreground hover:text-[#1DA1F2] hover:bg-white/10 transition-all">
                            <Twitter className="w-5 h-5" />
                        </a>
                        <a href="#" class="p-2 rounded-full bg-white/5 border border-white/10 text-muted-foreground hover:text-[#0A66C2] hover:bg-white/10 transition-all">
                            <Linkedin className="w-5 h-5" />
                        </a>
                        <a href="mailto:hello@example.com" class="px-6 py-2 rounded-full bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-all flex items-center gap-2">
                            <Mail className="w-4 h-4" />
                            Contact Me
                        </a>
                    </div>
                </div>
			</div>

            {/* Content Grid */}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                {/* Experience */}
                <section>
                    <h2 class="font-heading text-2xl font-bold mb-8 flex items-center gap-2">
                        Experience
                        <div class="h-px flex-grow bg-white/10 ml-4"></div>
                    </h2>
                    
                    <div class="space-y-8">
                        {[
                            {
                                role: "Senior Frontend Engineer",
                                company: "Tech Corp",
                                period: "2023 - Present",
                                description: "Leading the frontend team in building the next generation of cloud tools."
                            },
                            {
                                role: "UI Developer",
                                company: "Creative Studio",
                                period: "2021 - 2023",
                                description: "Crafted award-winning websites and interactive experiences for global brands."
                            },
                            {
                                role: "Freelance Developer",
                                company: "Self-employed",
                                period: "2019 - 2021",
                                description: "Worked with startups to launch MVPs and scale their digital presence."
                            }
                        ].map((job) => (
                            <div class="relative pl-8 border-l border-white/10">
                                <div class="absolute -left-1.5 top-1.5 w-3 h-3 rounded-full bg-primary border-4 border-background" />
                                <h3 class="font-bold text-lg">{job.role}</h3>
                                <div class="text-sm text-primary mb-2">{job.company} ‚Ä¢ {job.period}</div>
                                <p class="text-muted-foreground text-sm">{job.description}</p>
                            </div>
                        ))}
                    </div>
                </section>

                {/* Tech Stack */}
                <section>
                    <h2 class="font-heading text-2xl font-bold mb-8 flex items-center gap-2">
                        Tech Stack
                        <div class="h-px flex-grow bg-white/10 ml-4"></div>
                    </h2>
                    
                    <div class="grid grid-cols-2 gap-4">
                        {[
                            { category: "Frontend", items: ["React", "Next.js", "Astro", "TypeScript", "Tailwind"] },
                            { category: "Backend", items: ["Node.js", "PostgreSQL", "Redis", "Supabase"] },
                            { category: "Design", items: ["Figma", "Blender", "After Effects"] },
                            { category: "Tools", items: ["Git", "Docker", "VS Code", "Vercel"] }
                        ].map((stack) => (
                            <div class="bg-card border border-white/5 rounded-xl p-6 hover:border-primary/30 transition-colors">
                                <h3 class="font-bold text-sm text-muted-foreground mb-4 uppercase tracking-wider">{stack.category}</h3>
                                <ul class="space-y-2">
                                    {stack.items.map((item) => (
                                        <li class="flex items-center gap-2 text-sm">
                                            <div class="w-1.5 h-1.5 rounded-full bg-primary/50" />
                                            {item}
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        ))}
                    </div>
                </section>
            </div>
		</div>
	</main>

	<Footer />
</Layout>
